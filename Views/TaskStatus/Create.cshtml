@model ProjectTracker.Models.TaskStatus

@{
  ViewBag.Title = "Create Task Status";
}

<form asp-controller="taskstatus" asp-action="create" method="POST" class="mt-3">
  <div class="form-group">
    <label asp-for="StatusName">Status Name</label>
    <input asp-for="StatusName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="OrderPriority">Order Priority</label>
    <input asp-for="OrderPriority" class="form-control" placeholder="Optional">
  </div>
  <div class="form-group">
    <label asp-for="IsDefault" class="form-check-label">Order Priority</label>
    <input asp-for="IsDefault" class="ml-3" style="transform: scale(2);">
    <span asp-validation-for="IsDefault"></span>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>