@model ProjectTracker.Models.TaskStatus

@{
  ViewBag.Title = "Edit Task Status";
}

<form asp-controller="TaskStatus" asp-action="Edit" method="POST" class="mt-3">
  <div class="form-group">
    <label asp-for="StatusName">Status Name</label>
    <input asp-for="StatusName" class="form-control">
    <span asp-validation-for="StatusName"></span>
  </div>

  <div class="form-group">
    <label asp-for="OrderPriority">Order Priority</label>
    <input asp-for="OrderPriority" class="form-control">
    <span asp-validation-for="OrderPriority"></span>
  </div>

  <div class="form-group">
    <label asp-for="IsDefault" class="form-check-label">Default Status</label>
    <input asp-for="IsDefault" class="ml-3" style="transform: scale(2);">
  </div>
  
  <button type="submit" class="btn btn-primary">Update</button>
  <a asp-controller="taskstatus" asp-action="index" class="btn btn-primary ml-3">Cancel</a>
</form>