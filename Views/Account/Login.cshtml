@model LoginViewModel

@{
  ViewBag.Title = "Login";
}

<form method="POST" class="mt-3">
  <div class="form-group">
    <label asp-for="@Model.Email"></label>
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
    <input asp-for="@Model.Email" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="@Model.Password"></label>
    <span asp-validation-for="@Model.Password" class="text-danger"></span>
    <input asp-for="@Model.Password" class="form-control">
    <div >
      <a asp-action="ForgotPassword" class="form-text text-primary small"><u>Forgot Password?</u></a>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="@Model.RememberMe"></label>
    <input asp-for="@Model.RememberMe" class="ml-3" style="transform: scale(2);">
  </div>
  <div asp-validation-summary="All" class="text-danger"></div>
  <button type="submit" class="btn btn-primary">Login</button>
  <a asp-controller="Account" asp-action="Register" class="btn btn-primary ml-3">Register</a>
</form>