@model Project

@{
  ViewBag.Title = "Projects";
}
  
<div class="mt-3">

  <div class="container ">
    <h1 class="text-center">@Model.ProjectName</h1>
  </div>

  <div class="container mt-3">
    <div class="row row-height-3 align-items-center border-bottom border-white">
      <div class="col-sm-5">Task Name</div>
      <div class="col-sm">Status</div>
      <div class="col-sm">Deadline</div>
      <div class="col-sm">Creator</div>
      <div class="col-sm">Action</div>
    </div>

      @foreach (var task in Model.Tasks)
      {
      <div class="row row-height-3 align-items-center mt-3 bg-secondary">
        <div class="col-sm-5">@task.TaskName</div>
        <div class="col-sm">@task.TaskStatus.StatusName</div>
        <div class="col-sm">@task.Deadline.ToString("yyyy/MM/dd")</div>
        <div class="col-sm">@task.Creator</div>
        <div class="col-sm">
          <a asp-controller="task" asp-action="edit" asp-route-id="@task.ProjectId" asp-route-taskId="@task.Id">
            <i class="far fa-edit fa-lg mr-2"></i>
          </a>
          <a asp-controller="task" asp-action="delete" asp-route-id="@task.ProjectId" asp-route-taskId="@task.Id">
            <i class="far fa-trash-alt fa-lg mr-2"></i>
          </a>
        </div>
      </div>
      <div class="row align-items-center pb-3 bg-secondary">
        <div class="col-sm-12">@task.Description</div>
      </div>
      }
    
    <div class="row aling-items-center mt-3">
      <div class="col-sm-12 p-0">
        <a asp-controller="task" asp-action="create" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Add New Task</a>
      </div>
    </div>

    <div class="row aling-items-center mt-3">
      <div class="col-sm-12 p-0">
        <a asp-controller="taskstatus" asp-action="index" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Manage Task Status</a>
      </div>
    </div>
  </div>

</div>