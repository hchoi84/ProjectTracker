@model ProjectTask

@{
  ViewBag.Title = "Edit Task";
}

<form asp-controller="task" asp-action="edit" method="POST" class="mt-3">
  <input type="hidden" readonly asp-for="Id">
  <input type="hidden" readonly asp-for="ProjectId">
  <div class="form-group">
    <label asp-for="TaskName">Task Name</label>
    <input asp-for="TaskName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Deadline">Deadline</label>
    <input asp-for="Deadline" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Creator">Creator</label>
    <input asp-for="Creator" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Description">Description</label>
    <textarea asp-for="Description" class="form-control"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>