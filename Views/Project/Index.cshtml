@model Project

  @{
    ViewBag.Title = "Projects";
  }
  
  <div class="mt-3">
  
    <div class="container">
      <div class="row row-height-3 align-items-center border-bottom border-white">
        <div class="col-sm-4">Project Name</div>
        <div class="col-sm">Created</div>
        <div class="col-sm">Updated</div>
        <div class="col-sm">Deadline</div>
        <div class="col-sm">Creator</div>
        <div class="col-sm">Action</div>
      </div>

        <div class="row row-height-3 align-items-center mt-3 bg-secondary">
          <div class="col-sm-4">
            <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.Id">@Model.ProjectName</a>
          </div>
          <div class="col-sm">@Model.Created.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@Model.Updated.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@Model.Deadline.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@Model.Creator</div>
          <div class="col-sm">
            <a asp-controller="home" asp-action="Edit" asp-route-id="@Model.Id">
              <i class="far fa-edit fa-lg mr-2"></i>
            </a>
            <a asp-controller="home" asp-action="delete" asp-route-id="@Model.Id">
              <i class="far fa-trash-alt fa-lg mr-2"></i>
            </a>
          </div>
        </div>
        <div class="row align-items-center pb-3 bg-secondary">
          <div class="col-sm-12">@Model.Summary</div>
        </div>
      
      <div class="row aling-items-center mt-3">
        <div class="col-sm-12 p-0">
          <a asp-controller="Home" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Add New Project</a>
        </div>
      </div>
    </div>
  
  </div>