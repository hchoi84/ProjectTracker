@model ProjectViewModel

@{
  ViewBag.Title = "Create Project";
  var today = DateTime.Now.ToString("yyyy-MM-dd");
}

<form asp-controller="home" asp-action="create" method="POST" class="mt-3">
  <div class="form-group">
    <label asp-for="@Model.project.ProjectName">Project Name</label>
    <input asp-for="@Model.project.ProjectName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="@Model.project.Deadline">Deadline</label>
    <input asp-for="@Model.project.Deadline" class="form-control" value="@today">
  </div>
  <div class="form-group">
    <label asp-for="@Model.project.UserId">Creator</label>
    <select asp-for="@Model.project.UserId" class="form-control">
      @foreach (var user in Model.users)
      {
        <option value="@user.Id">@user.GetFullName</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label asp-for="@Model.project.Summary">Summary</label>
    <textarea asp-for="@Model.project.Summary" class="form-control"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
  <a asp-controller="home" asp-action="index" class="btn btn-primary ml-2">Cancel</a>
</form>
