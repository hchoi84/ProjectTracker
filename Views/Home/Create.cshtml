@model ProjectCreateViewModel

@{
  ViewBag.Title = "Create Project";
  var deadlineDefault = DateTime.Now.AddDays(1).ToString("yyyy-MM-dd");
}

<form asp-controller="home" asp-action="create" method="POST" class="mt-3">
  <div class="form-group">
    <label asp-for="ProjectName">
      Project Name
      <span asp-validation-for="ProjectName" class="text-danger"></span>
    </label>
    <input asp-for="ProjectName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Deadline">
      Deadline
      <span asp-validation-for="Deadline" class="text-danger"></span>
    </label>
    <input asp-for="Deadline" class="form-control" value="@deadlineDefault">
  </div>
  <div class="form-group">
    <label asp-for="Summary">
      Summary
      <span asp-validation-for="Summary" class="text-danger"></span>
    </label>
    <textarea asp-for="Summary" class="form-control"></textarea>
  </div>
  <div asp-validation-summary="All" class="text-danger"></div>
  <button type="submit" class="btn btn-primary">Create</button>
  <a asp-controller="home" asp-action="index" class="btn btn-primary ml-2">Cancel</a>
</form>
