@model Project

@{
  ViewBag.Title = "Edit Project";
}

<form asp-controller="home" asp-action="edit" method="POST" class="mt-3">
  <input type="hidden" asp-for="Id">
  <div class="form-group">
    <label asp-for="ProjectName">Project Name</label>
    <input asp-for="ProjectName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Deadline">Deadline</label>
    <input asp-for="Deadline" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Creator">Creator</label>
    <input asp-for="Creator" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Summary">Summary</label>
    <textarea asp-for="Summary" class="form-control"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a asp-controller="home" asp-action="index" class="btn btn-primary ml-2">Cancel</a>
</form>