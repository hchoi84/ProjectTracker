@model ProjectViewModel

@{
  ViewBag.Title = "Edit Project";
}

<form asp-controller="home" asp-action="edit" method="POST" class="mt-3">
  <input type="hidden" asp-for="@Model.Project.Id">
  <div class="form-group">
    <label asp-for="@Model.Project.ProjectName">Project Name</label>
    <input asp-for="@Model.Project.ProjectName" class="form-control">
    <span asp-validation-for="@Model.Project.ProjectName"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Project.Deadline">Deadline</label>
    <input asp-for="@Model.Project.Deadline" class="form-control">
    <span asp-validation-for="@Model.Project.Deadline"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Project.MemberId">Creator</label>
    <select asp-for="@Model.Project.MemberId" class="form-control">
      @foreach (var member in Model.Members)
      {
        <option value="@member.Id">@member.GetFullName</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Project.Summary">Summary</label>
    <textarea asp-for="@Model.Project.Summary" class="form-control"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a asp-controller="home" asp-action="index" class="btn btn-primary ml-2">Cancel</a>
</form>