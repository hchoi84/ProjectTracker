@model IEnumerable<Project>

@{
  ViewBag.Title = "Projects";
}

<div class="mt-3">
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Project</th>
        <th scope="col">Created</th>
        <th scope="col">Updated</th>
        <th scope="col">Deadline</th>
        <th scope="col">Remaining</th>
        <th scope="col">Creator</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var project in Model)
      {
      <tr>
        <th scope="row">@project.ProjectName</th>
        <td>@project.Created.ToString("yyyy/MM/dd HH:mm tt")</td>
        <td>@project.Updated.ToString("yyyy/MM/dd HH:mm tt")</td>
        <td>@project.Deadline.ToString("yyyy/MM/dd")</td>
        <td>@project.GetRemaining()</td>
        <td>@project.Creator</td>
      </tr>
      }
    </tbody>
  </table>
</div>