@model IEnumerable<Project>

@{
  ViewBag.Title = "Projects";
}

<div class="mt-3">

  <div class="container ">
    <h1 class="text-center">All Projects</h1>
  </div>

  <div class="container">
    <div class="row row-height-3 align-items-center border-bottom border-white">
      <div class="col-sm-4">Project Name</div>
      <div class="col-sm">Created</div>
      <div class="col-sm">Updated</div>
      <div class="col-sm">Deadline</div>
      <div class="col-sm">Creator</div>
      <div class="col-sm">Action</div>
    </div>
    @if (Model.Any())
    {
      @foreach (var project in Model)
      {
        <div class="row row-height-3 align-items-center mt-3 bg-secondary">
          <div class="col-sm-4">
            <a asp-controller="task" asp-action="Index" asp-route-id="@project.Id">@project.ProjectName</a>
          </div>
          <div class="col-sm">@project.Created.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@project.Updated.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@project.Deadline.ToString("yyyy/MM/dd")</div>
          <div class="col-sm">@project.Member.GetFullName</div>
          <div class="col-sm">
            <a asp-controller="home" asp-action="Edit" asp-route-id="@project.Id">
              <i class="far fa-edit fa-lg mr-2"></i>
            </a>
            <a asp-controller="home" asp-action="delete" asp-route-id="@project.Id">
              <i class="far fa-trash-alt fa-lg mr-2"></i>
            </a>
          </div>
        </div>
        <div class="row align-items-center pb-3 bg-secondary">
          <div class="col-sm-12">@project.Summary</div>
        </div>
      }
    }
    else
    {
      <div class="col-sm-12 mt-3 p-0">
        <h5>No Projects to Display</h5>
      </div>
    }
    
    <div class="row aling-items-center mt-3">
      <div class="col-sm-12 p-0">
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Add New Project</a>
        <a asp-controller="taskstatus" asp-action="index" class="btn btn-primary ml-3"><i class="fas fa-tasks mr-2"></i>Manage Task Status</a>
      </div>
    </div>
  </div>

</div>