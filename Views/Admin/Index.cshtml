@model List<Member>

@{
  ViewBag.Title = "Admin";
}

<div class="mt-3">

  <div class="container ">
    <h1 class="text-center">Edit Members</h1>
  </div>

  <div class="container">
    <div class="row row-height-3 align-items-center border-bottom border-white">
      <div class="col-4">Name</div>
      <div class="col">Joined</div>
      <div class="col">Action</div>
    </div>
    @if (Model.Any())
    {
      @foreach (var member in Model)
      {
        <div class="row row-height-3 align-items-center mt-3 bg-secondary">
          <div class="col-4">@member.GetFullName</div>
          <div class="col">@member.Created.ToString("yyyy/MM/dd")</div>
          <div class="col">
            <a asp-controller="Admin" asp-action="Edit" asp-route-memberId="@member.EncryptedId">
              <i class="far fa-edit fa-lg mr-2"></i>
            </a>
            <a asp-controller="Admin" asp-action="Delete" asp-route-memberId="@member.EncryptedId">
              <i class="far fa-trash-alt fa-lg mr-2"></i>
            </a>
          </div>
        </div>
      }
    }
    else
    {
      <div class="col-sm-12 mt-3 p-0">
        <h5>No Members to Display</h5>
      </div>
    }
    
    <div class="row aling-items-center mt-3">
      <div class="col-sm-12 p-0">
        <a asp-controller="Admin" asp-action="Register" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Add New Member</a>
      </div>
    </div>
  </div>

</div>